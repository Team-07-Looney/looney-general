{
  // Needed in order to make the ESLint VS Extension aware that there are
  // files that are being ignored
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  // Needed in order for the editor to check the svelte files as well
  "eslint.validate": [
    "javascript",
    "svelte"
  ]
}